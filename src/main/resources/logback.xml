<configuration debug="false" scan="true">
    <property name="LOG_PATH" value="."/>
    <property name="LOG_ARCHIVE" value="${LOG_PATH}/logs"/>

    <conversionRule conversionWord="hl" converterClass="pw.aru.logging.LogbackHighlightConverter"/>

    <appender name="console" class="pw.aru.logging.TerminalConsoleAdaptor">
        <encoder>
            <pattern>[%d{HH:mm:ss}] [%hl(%-1level)] [%green(%logger{0})]: %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/aru.log</file>
        <encoder>
            <pattern>[%d{HH:mm:ss}] [%-1level] [%logger{0}]: %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_ARCHIVE}/%d{MM-dd-yyyy}.log.gz</fileNamePattern>
            <maxHistory>50</maxHistory>
        </rollingPolicy>
    </appender>

    <appender name="discord" class="pw.aru.logging.DiscordLogBack"/>

    <root level="INFO">
        <appender-ref ref="console"/>
        <appender-ref ref="file"/>
        <appender-ref ref="discord"/>
    </root>
</configuration>